@model DemoCRUD.ViewModels.LivrosPorGeneroViewModel

<h2>Gênero: @Model.Genero</h2>

@foreach (var item in Model.Livros)
{
    <div class="col-sm-12 col-md-6" style="margin-bottom: 3rem">
        <div class="thumbnail">
            <img src="~/Content/img/flat-book.png" alt="Imagem exemplo de um livro" />
            <div class="caption">
                <h3 title="@item.Titulo">@item.Titulo.Substring(0, item.Titulo.Length > 32 ? 32 : item.Titulo.Length)</h3>
                <p>Autor: @item.Autor</p>
                <p>Ano da edição: @item.AnoEdicao</p>
                <p>@String.Format("R$ {0}", item.Valor)</p>
            </div>
        </div>
    </div>
}

